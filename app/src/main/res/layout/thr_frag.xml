<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/denglu_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="当前用户："
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/geren_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_toRightOf="@id/textView8"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:layout_marginTop="150dp"
        tools:ignore="MissingConstraints" />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/image"
    android:src="@mipmap/geren_img"
    android:alpha="0.7"
    android:layout_below="@id/geren_username"
    android:layout_marginLeft="110dp"
    android:layout_marginTop="20dp"
    />
    <Button
        android:id="@+id/geren_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/press_effect"
        android:text="修改密码"
        android:layout_above="@id/geren_back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"

       />

    <Button
        android:id="@+id/geren_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/press_effect"
        android:text="注销账户"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        /> <Button
        android:id="@+id/geren_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/press_effect"
        android:text="退出登录"
    android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/geren_delete"

        />


</RelativeLayout>