<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/xiaohua_back"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开心一刻"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:background="@color/aaaa"/>

    <TextView
        android:id="@+id/sec_xiaohua"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_xiayige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="463dp"
        android:background="@drawable/press_effect"
        android:text="下一个"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_shangyige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="463dp"
        android:layout_marginEnd="236dp"
        android:background="@drawable/press_effect"
        android:text="上一个"
        android:textSize="30sp" />


</RelativeLayout>